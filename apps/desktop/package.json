{
	"name": "@pico/desktop",
	"version": "1.0.0",
	"description": "A tool for viewing and filtering the logs of a game",
	"type": "module",
	"scripts": {
		"dev": "tauri dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest run",
		"test:ui": "vitest --ui",
		"test:watch": "vitest",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"tauri": "tauri",
		"cache-ships": "node scripts/cache-fleet-images.js",
		"sync-version": "node scripts/sync-version.js",
		"version": "npm run sync-version && cd src-tauri && cargo check --quiet && cd .. && git add src-tauri/tauri.conf.json src-tauri/Cargo.toml src-tauri/Cargo.lock"
	},
	"license": "MIT",
	"dependencies": {
		"@pico/shared": "workspace:*",
		"@pico/types": "workspace:*",
		"@tauri-apps/api": "^2.9.0",
		"@tauri-apps/plugin-dialog": "~2.4.2",
		"@tauri-apps/plugin-fs": "~2.4.4",
		"@tauri-apps/plugin-http": "^2.5.4",
		"@tauri-apps/plugin-opener": "^2.5.2",
		"@tauri-apps/plugin-process": "~2.3.1",
		"@tauri-apps/plugin-store": "~2.4.1",
		"@tauri-apps/plugin-updater": "^2.9.0",
		"@tauri-apps/plugin-websocket": "~2.4.1",
		"sharp": "^0.34.5"
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.1",
		"@lucide/svelte": "0.555.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@tauri-apps/cli": "^2.9.4",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@vitest/coverage-v8": "^4.0.14",
		"@vitest/ui": "^4.0.14",
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0",
		"dotenv": "^17.2.3",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"fuse.js": "^7.1.0",
		"globals": "^16.5.0",
		"happy-dom": "^20.0.11",
		"jsdom": "^27.2.0",
		"postcss": "^8.5.6",
		"prettier": "^3.7.1",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.2",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"toml": "^3.0.0",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.48.0",
		"vite": "^7.2.4",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.14"
	}
}
