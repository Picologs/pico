{
	"name": "@pico/website",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/rob-balfre/picologs-website.git"
	},
	"scripts": {
		"dev": "bun --bun vite dev --open",
		"test": "vitest run",
		"test:watch": "vitest",
		"dev:test": "bun --env-file=.env.test --bun vite dev",
		"build": "bun --bun vite build",
		"start": "bun build/index.js",
		"preview": "bun --bun vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "bun --env-file=.env.local drizzle-kit studio"
	},
	"devDependencies": {
		"@electric-sql/pglite": "^0.3.14",
		"@eslint/compat": "^2.0.0",
		"@eslint/js": "^9.39.1",
		"@pico/types": "workspace:*",
		"@sveltejs/kit": "^2.49.0",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/svelte": "^5.2.9",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/ws": "^8.18.1",
		"date-fns": "^4.1.0",
		"date-fns-tz": "^3.2.0",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.7",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"jsdom": "^27.2.0",
		"neonctl": "^2.18.1",
		"prettier": "^3.7.1",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.45.2",
		"svelte-adapter-bun": "^1.0.1",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"tsx": "^4.20.6",
		"typescript": "5.9.3",
		"typescript-eslint": "^8.48.0",
		"vite": "^7.2.4",
		"vite-plugin-devtools-json": "^1.0.0",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^4.0.14"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.940.0",
		"@lucide/svelte": "0.555.0",
		"@neondatabase/serverless": "^1.0.2",
		"@pico/shared": "workspace:*",
		"drizzle-orm": "^0.44.7",
		"jsonwebtoken": "^9.0.2",
		"valibot": "^1.2.0",
		"ws": "^8.18.3"
	}
}
