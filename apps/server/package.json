{
  "name": "@pico/server",
  "version": "2.0.0",
  "description": "Bun WebSocket server for Picologs",
  "main": "src/index.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/rob-balfre/picologs-server.git"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun --watch --env-file=.env.local run src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "get-discord-id": "bun --env-file=.env run scripts/get-discord-id.ts"
  },
  "keywords": [
    "websocket",
    "server",
    "picologs",
    "bun"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ws": "^8.18.1",
    "dotenv": "^17.2.3",
    "neon-testing": "^2.2.0",
    "vitest": "^4.0.14",
    "ws": "^8.18.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.940.0",
    "@neondatabase/serverless": "^1.0.2",
    "@pico/shared": "workspace:*",
    "@pico/types": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "jsonwebtoken": "^9.0.2",
    "resend": "^6.5.2",
    "sharp": "^0.34.5"
  }
}
