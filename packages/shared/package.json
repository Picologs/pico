{
  "name": "@pico/shared",
  "version": "1.0.1",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rob-balfre/picologs-shared.git"
  },
  "scripts": {
    "dev": "svelte-package --watch",
    "build": "svelte-kit sync && svelte-package",
    "build:watch": "svelte-kit sync && svelte-package --watch",
    "preview": "vite preview",
    "prepack": "svelte-kit sync && svelte-package && publint",
    "clean-tests": "echo 'Clean tests skipped on Windows'",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist",
    "src/lib/data",
    "src/app.css"
  ],
  "svelte": "./src/lib/index.ts",
  "types": "./src/lib/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/lib/index.ts",
      "svelte": "./src/lib/index.ts",
      "default": "./src/lib/index.ts"
    },
    "./server": {
      "types": "./src/lib/server/index.ts",
      "default": "./src/lib/server/index.ts"
    },
    "./styles": "./src/app.css",
    "./data/fleet.json": "./src/lib/data/fleet.json"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@lucide/svelte": "0.555.0",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/kit": "^2.49.0",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@tauri-apps/plugin-store": "^2.4.1",
    "@testing-library/svelte": "^5.2.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.14",
    "date-fns": "^4.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.0",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.7.1",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "publint": "^0.3.15",
    "svelte": "^5.45.2",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.17",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.2.4",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^4.0.14"
  },
  "keywords": [
    "svelte"
  ],
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@pico/types": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "valibot": "^1.2.0"
  },
  "peerDependencies": {
    "@aws-sdk/client-s3": "^3.939.0",
    "@sveltejs/kit": "^2.0.0",
    "@tauri-apps/plugin-store": "^2.4.1",
    "jsonwebtoken": "^9.0.2",
    "svelte": "^5.0.0",
    "ws": "^8.18.3",
    "zod": "^4.1.13"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-s3": {
      "optional": true
    },
    "@sveltejs/kit": {
      "optional": true
    },
    "@tauri-apps/plugin-store": {
      "optional": true
    },
    "jsonwebtoken": {
      "optional": true
    },
    "svelte": {
      "optional": true
    },
    "ws": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  }
}
