{
  "name": "pico",
  "private": true,
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "build": "turbo run build",
    "predev": "npx kill-port 5173 5174 8080 1420 || true",
    "dev": "turbo run dev",
    "check": "turbo run check",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,svelte,md}\""
  },
  "devDependencies": {
    "prettier": "^3.7.1",
    "prettier-plugin-svelte": "^3.4.0",
    "turbo": "^2.6.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "overrides": {
      "typescript": "5.9.3",
      "@lucide/svelte": "0.554.0"
    },
    "onlyBuiltDependencies": []
  }
}
